<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="false">
	<contextName>cdfg_boss</contextName>  	
	<property name="LOG_HOME" value="/usr/cdfg/logs/springdemo/" />  
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="UTF-8">     
			<pattern>%contextName %date %-5level %logger{80},L:%line - %msg%n</pattern>
		</encoder>
	</appender>

    <appender name="FILEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/cdfg-boss.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder charset="UTF-8">     
            <pattern>%date [%thread] %-5level %logger{80},L:%line - %msg%n</pattern>
        </encoder>
    </appender>
	
	<logger name="com.cdfg" level="DEBUG"/>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILEBUG" />
	</root>
 	
</configuration>